{
  "version": 2,
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": "website",
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/website/assets/$1"
    },
    {
      "source": "/en/(.*)",
      "destination": "/website-en/$1"
    },
    {
      "source": "/fr/(.*)",
      "destination": "/website-fr/$1"
    },
    {
      "source": "/nl/(.*)",
      "destination": "/website-nl/$1"
    },
    {
      "source": "/pl/(.*)",
      "destination": "/website-pl/$1"
    },
    {
      "source": "/en",
      "destination": "/website-en/index.html"
    },
    {
      "source": "/fr",
      "destination": "/website-fr/index.html"
    },
    {
      "source": "/nl",
      "destination": "/website-nl/index.html"
    },
    {
      "source": "/pl",
      "destination": "/website-pl/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/website/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
